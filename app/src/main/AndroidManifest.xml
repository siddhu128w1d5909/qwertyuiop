<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siddhu.capp">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".app.CollegeApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.DashBoardActivity"
            android:label="@string/title_activity_student_dash_board"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.UserLoginActivity"
            android:label="@string/title_activity_student_dash_board"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.UserRegistrationActivity"
            android:label="@string/title_activity_student_dash_board"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.StudentActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.AppIntroActivity"
            android:label="@string/title_activity_student_dash_board"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.ForgotpasswordActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activities.CircularDetailsActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>