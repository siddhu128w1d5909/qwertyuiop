<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <include
            android:id="@+id/header_lyt"
            layout="@layout/header_lyt" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/margin_15"
            android:layout_below="@+id/header_lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                android:text="Register"
                android:textSize="@dimen/font_24sp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/margin_10"
                android:id="@+id/activity_reg_fname_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="First Name"
                    android:id="@+id/et_first_name"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:visibility="gone"
                android:id="@+id/fname_error"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_lname_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="Last Name"
                    android:id="@+id/et_last_name"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4"
                android:id="@+id/lname_error"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_email_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="Roll Number"
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4"
                android:id="@+id/email_error"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_pwd_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="Password"
                    android:id="@+id/et_password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4"
                android:id="@+id/pwd_error"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_mobile_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="Mobile Number"
                    android:id="@+id/et_mobile_Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4"
                android:id="@+id/mobile_error"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="@dimen/font_24sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/margin_10"
                android:text="Address"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_street_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="Street"
                    android:id="@+id/et_address_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4"
                android:id="@+id/street_error"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_city_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="City"
                    android:id="@+id/et_address_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_4"
                    android:id="@+id/city_error"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_reg_pincode_text_input_layout"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:hint="PinCode"
                    android:id="@+id/et_pincode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4"
                android:id="@+id/pincode_error"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:id="@+id/spinner_layout"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="Select Blood Group"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blood_spinner"
                    android:padding="@dimen/margin_10"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:entries="@array/blood_group"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/branch_spinner_lyt"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="Select Branch"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/branch_spinner"
                    android:padding="@dimen/margin_10"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:entries="@array/blood_group"
                    />


            </LinearLayout>



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:text="Register"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/button_round"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_login"
                android:layout_marginTop="@dimen/margin_16"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_18sp"
                android:text="Already Registered ? Login Now !"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ProgressBar
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />
    </RelativeLayout>
</ScrollView>
