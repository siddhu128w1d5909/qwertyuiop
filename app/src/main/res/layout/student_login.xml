<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header_lyt"
        android:visibility="gone"
        layout="@layout/header_lyt" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_login_error_text_view"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:textSize="@dimen/font_22sp"
        android:gravity="bottom"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="fdmgvf"
        android:visibility="gone"
        android:padding="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:text="Login"
        android:id="@+id/login_type"
        android:textSize="@dimen/font_22sp"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/margin_8"
        android:id="@+id/activity_login_email_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:hint="Email"
            android:id="@+id/activity_login_email_text_input_edit_text"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/margin_8"
        android:id="@+id/activity_login_password_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:hint="Password"
            android:id="@+id/activity_login_password_text_input_edit_text"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_login_sign_in_button"
        android:text="Login"
        android:layout_margin="@dimen/margin_8"
        android:background="@drawable/button_round"
        android:layout_marginTop="@dimen/margin_16"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_login_forgotpwd"
        android:layout_marginTop="@dimen/margin_16"
        android:textColor="@color/colorAccent"
        android:text="Forgot Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_login_register"
        android:layout_marginTop="@dimen/margin_16"
        android:textColor="@color/colorAccent"
        android:text="Not Registered ? Register Now !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_login_dash"
        android:layout_marginTop="@dimen/margin_16"
        android:textColor="@color/colorAccent"
        android:text="DashBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>